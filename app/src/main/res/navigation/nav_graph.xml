<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.geonwoo.assignment.presentation.list.TodoListFragment"
        android:label="할 일 목록"
        tools:layout="@layout/fragment_todo_list">

        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/todoDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/todoDetailFragment"
        android:name="com.geonwoo.assignment.presentation.detail.TodoDetailFragment"
        android:label="할 일 상세"
        tools:layout="@layout/fragment_todo_detail">

        <argument
            android:name="todoId"
            app:argType="long" />

    </fragment>

</navigation>
